@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/IndexLayout.cshtml";
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori İşlemleri</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kategori Adı</th>
                                <th>Kategoriye Ait Ürünler</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                count++;
                                <tr>
                                <th scope="row">@count</th>
                                <th>@item.CategoryName</th>
                                <td><a href="#" class="btn btn-info">Kategoriye Ait Ürünler</a></td>
                                <td><a href="/Admin/Category/RemoveCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Category/CreateCategory/" class="btn btn-success">Yeni Kategori Girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>