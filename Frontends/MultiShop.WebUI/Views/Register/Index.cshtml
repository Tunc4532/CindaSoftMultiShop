                        <a href="#google"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                        <a href="#insta"><span class="fa fa-pinterest" aria-hidden="true"></span></a>
                    </div> *@
                </div>

            </div>


            <!-- copyright-->
            <div class="copyright text-center">
                <p class="copy-footer-29">
                    © @DateTime.Now.Year M&Y Yazılım | Tüm Hakları Saklıdır <a href="">Tunç Çindaş</a>
                </p>
            </div>
        </div>
        <!-- //copyright-->
    </div>
    <!-- //form section start -->
    <!-- js -->
    <script src="~/Freelancer-Signup-Free/js/jquery.min.js"></script>
