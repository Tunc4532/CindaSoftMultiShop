    <!--//Style-CSS -->

    <link rel="stylesheet" href="~/Freelancer-Signup-Free/css/font-awesome.min.css" type="text/css" media="all">
    <style>
        .btn-register {
            display: inline-block; /* Diğer içeriklerle aynı hizada olmasını sağlar */
            padding: 10px 20px; /* Butonun içerik içi boşluğunu ayarlar */
            font-size: 14px; /* Buton metin boyutunu ayarlar */
            background-color: orangered; /* Buton arka plan rengini ayarlar */
            color: #ffffff; /* Buton metin rengini ayarlar */
            text-decoration: none; /* Link altı çizgisini kaldırır */
            border-radius: 5px; /* Buton köşelerini yuvarlar */
            transition: background-color 0.3s; /* Buton üzerine gelince geçiş efekti */
            width: 400px; /* Buton genişliğini ayarlar */
            height: 45px; /* Buton yüksekliğini ayarlar */
            text-align: center; /* Buton metni ortalar */
            line-height: 30px; /* Buton yüksekliğine göre metin hizalamasını ayarlar */
        }

            .btn-register:hover {
                background-color: forestgreen; /* Buton üzerine gelince arka plan rengini değiştirir */
            }
    </style>
</head>

<body>
    <div id="block" class="w3lvide-content with-background" data-vide-bg="false" data-vide-options="position: 0% 50%">

        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="main-hotair" >
                <div class="content-wthree"> 
                   
                    <h1>Merhaba</h1>
                    <p>
                        Giriş yap veya hesap oluştur, indirimleri kaçırma!
                    </p>
                    <form method="post">
                        <input type="text" class="text" asp-for="Username" placeholder="Kullanıcı Adı" required="" autofocus>
                        <input type="text" class="text" asp-for="Name" placeholder="İsim" required="" autofocus>
                        <input type="text" class="text" asp-for="Surname" placeholder="Soyisim" required="" autofocus>
                        <input type="email" class="text" asp-for="Email" placeholder="Mail" required="" autofocus>
                        <input type="password" class="password" asp-for="Password" placeholder="Şifre" required="" autofocus>
                        <input type="password" class="password" asp-for="ConfirmPassword" placeholder="Tekrar Şifre" required="" autofocus>
                        <button class="btn" type="submit">Kayıt Ol</button>
                    </form>

                    <br />
                    <a href="~/Login/Index" class="btn btn-register">Zaten Bir Hesabınız Var İse</a>

                    @*<p class="continue"><span>Sosyal Medya Hesaplarınıız İle Kayıt Olabilirsiniz</span></p>
