@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/IndexLayout.cshtml";
    int count = 0;
}
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori İşlemleri</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Kullanıcı</th>
                                <th>Yorum</th>
                                <th>Tarih</th>
                                <th>Ürün</th>
                                <th>Durum</th>
                                <th>Aktif veya Pasif Ayarları</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <th>@item.NameSurname</th>
                                    <th>@item.CommentDetail</th>
                                    <th>@item.CreatedDate.ToLongDateString()</th>
                                    <th>Ürün Adı</th>
                                    <th>@item.Status</th>
                                    <td><a href="#" class="btn btn-info">Aktif</a>  <a href="/Admin/Comment/UpdateComment/@item.UserCommentId" class="btn btn-success">Pasif</a></td>
                                    <td><a href="/Admin/Comment/RemoveComment/@item.UserCommentId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Comment/UpdateComment/@item.UserCommentId" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>