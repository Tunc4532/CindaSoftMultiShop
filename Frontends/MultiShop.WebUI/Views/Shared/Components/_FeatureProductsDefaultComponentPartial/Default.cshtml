@model List<ResultProductDto>

<style>
    #product-list {
        min-height: 220px;
    }
</style>

<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Öne Çıkan Ürünler</span></h2>
    <div class="row px-xl-5">
        @foreach (var item in Model)
        {
            decimal price = ((item.ProductPrice / 100) * 15) + item.ProductPrice;

            <div class="col-lg-2 col-md-4 col-sm-6 pb-1">
                <div class="product-item bg-light mb-4">
                    @*  <div class="product-img position-relative overflow-hidden"> *@
                    <div class="container-fluid pt-5 pb-3" id="product-list">
                        <img class="img-fluid" style="width:160px; height:135px; " src="@item.ProductImageUrl" alt="">
                        <div class="product-action">
                            <a class="btn btn-outline-dark btn-square" href="/ShoppingCart/AddBasketItem/@item.ProductId"><i class="fa fa-shopping-cart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                            <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                            <a class="btn btn-outline-dark btn-square" href="/ProductList/ProductDetail/@item.ProductId"><i class="fa fa-search"></i></a>
                        </div>
                    </div>
                    <div class="text-center py-4">
                        <a class="h6 text-decoration-none text-truncate" href="">@item.ProductName</a>
                        <div class="d-flex align-items-center justify-content-center mt-2">
                            <h5>@item.ProductPrice.ToString("C")</h5><h6 class="text-muted ml-2"><del>@price.ToString("C")</del></h6>
                        </div>
                        <div class="d-flex align-items-center justify-content-center mb-1">
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small class="fa fa-star text-primary mr-1"></small>
                            <small>(57)</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>